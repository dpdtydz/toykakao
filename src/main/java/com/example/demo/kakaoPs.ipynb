import pandas as pd
import re
from datetime import datetime
from collections import defaultdict

class KakaoTalkParser:
    def __init__(self, start_date=None, end_date=None):
        # ì¹´ì¹´ì˜¤í†¡ ë©”ì‹œì§€ íŒ¨í„´
        self.message_pattern = r'^(\d{4}ë…„ \d{1,2}ì›” \d{1,2}ì¼ (?:ì˜¤ì „|ì˜¤í›„) \d{1,2}:\d{2}), ([^:]+) : (.+)$'
        self.system_pattern = r'^(\d{4}ë…„ \d{1,2}ì›” \d{1,2}ì¼ (?:ì˜¤ì „|ì˜¤í›„) \d{1,2}:\d{2}), (.+)$'
        self.start_date = start_date
        self.end_date = end_date

    def parse_korean_datetime(self, datetime_str):
        """í•œêµ­ì–´ ë‚ ì§œ/ì‹œê°„ ë¬¸ìì—´ì„ datetime ê°ì²´ë¡œ ë³€í™˜"""
        # ë‚ ì§œ ë¶€ë¶„ ì¶”ì¶œ
        date_match = re.search(r'(\d{4})ë…„ (\d{1,2})ì›” (\d{1,2})ì¼', datetime_str)
        if not date_match:
            raise ValueError(f"ë‚ ì§œ í˜•ì‹ì„ íŒŒì‹±í•  ìˆ˜ ì—†ìŠµë‹ˆë‹¤: {datetime_str}")

        year, month, day = map(int, date_match.groups())

        # ì‹œê°„ ë¶€ë¶„ ì¶”ì¶œ
        time_match = re.search(r'(ì˜¤ì „|ì˜¤í›„) (\d{1,2}):(\d{2})', datetime_str)
        if not time_match:
            raise ValueError(f"ì‹œê°„ í˜•ì‹ì„ íŒŒì‹±í•  ìˆ˜ ì—†ìŠµë‹ˆë‹¤: {datetime_str}")

        period, hour, minute = time_match.groups()
        hour = int(hour)
        minute = int(minute)

        # 12ì‹œê°„ -> 24ì‹œê°„ í˜•ì‹ ë³€í™˜
        if period == 'ì˜¤í›„' and hour != 12:
            hour += 12
        elif period == 'ì˜¤ì „' and hour == 12:
            hour = 0

        return datetime(year, month, day, hour, minute)

    def parse_messages(self, content):
        """ì§€ì •ëœ ê¸°ê°„ì˜ ë©”ì‹œì§€ë§Œ íŒŒì‹± (ì‚¬ìš©ì ì…í‡´ì¥ ì‹œì  ê³ ë ¤)"""
        lines = content.split('\n')
        user_status = defaultdict(list)  # ê° ì‚¬ìš©ìì˜ ì…í‡´ì¥ ê¸°ë¡
        all_events = []  # ëª¨ë“  ì´ë²¤íŠ¸ (ë©”ì‹œì§€, ì…ì¥, í‡´ì¥)

        print(f"ì´ {len(lines)}ì¤„ì„ ì²˜ë¦¬í•©ë‹ˆë‹¤...")

        # ìƒ˜í”Œ ì¶œë ¥
        print("\nğŸ“„ íŒŒì¼ ìƒ˜í”Œ (ì²« 20ì¤„):")
        for i, line in enumerate(lines[:20], 1):
            print(f"{i:2d}: {line}")

        # ì²« ë²ˆì§¸ ë‹¨ê³„: ëª¨ë“  ì´ë²¤íŠ¸ë¥¼ ì‹œê°„ìˆœìœ¼ë¡œ íŒŒì‹±
        for i, line in enumerate(lines):
            line = line.strip()
            if not line:
                continue

            # í—¤ë”ë‚˜ íŠ¹ìˆ˜ ë©”ì‹œì§€ ê±´ë„ˆë›°ê¸°
            if any(skip_word in line for skip_word in ['ì €ì¥í•œ ë‚ ì§œ', 'ìš´ì˜ì •ì±…', 'ê³µì§€ì‚¬í•­']):
                continue

            # ì¼ë°˜ ë©”ì‹œì§€ ë¨¼ì € í™•ì¸
            match = re.match(self.message_pattern, line)
            if match:
                datetime_str, name, message = match.groups()

                try:
                    dt = self.parse_korean_datetime(datetime_str)
                    all_events.append({
                        'type': 'message',
                        'datetime': dt,
                        'name': name.strip(),
                        'message': message.strip()
                    })
                    if i < 10:  # ì²˜ìŒ ëª‡ ê°œ ë©”ì‹œì§€ ë¡œê·¸
                        print(f"  [ë©”ì‹œì§€ ë°œê²¬] {dt} - {name}: {message[:30]}...")
                except Exception as e:
                    if i < 10:
                        print(f"  [íŒŒì‹± ì˜¤ë¥˜] {line[:50]}... - {str(e)}")
                    continue

            # ì‹œìŠ¤í…œ ë©”ì‹œì§€ í™•ì¸
            else:
                # ì‹œìŠ¤í…œ ë©”ì‹œì§€ íŒ¨í„´ìœ¼ë¡œ ë‹¤ì‹œ í™•ì¸
                if 'ë‹˜ì´ ë“¤ì–´ì™”ìŠµë‹ˆë‹¤' in line or 'ë‹˜ì´ ë‚˜ê°”ìŠµë‹ˆë‹¤' in line:
                    # ë‚ ì§œ ë¶€ë¶„ ì¶”ì¶œ ì‹œë„
                    date_match = re.search(r'(\d{4}ë…„ \d{1,2}ì›” \d{1,2}ì¼ (?:ì˜¤ì „|ì˜¤í›„) \d{1,2}:\d{2})', line)
                    if date_match:
                        datetime_str = date_match.group(1)
                        try:
                            dt = self.parse_korean_datetime(datetime_str)

                            if 'ë‹˜ì´ ë“¤ì–´ì™”ìŠµë‹ˆë‹¤' in line:
                                name_match = re.search(r'(.+?)ë‹˜ì´ ë“¤ì–´ì™”ìŠµë‹ˆë‹¤', line)
                                if name_match:
                                    name = name_match.group(1).strip()
                                    # ë‚ ì§œ ë¶€ë¶„ ì œê±°
                                    name = re.sub(r'^\d{4}ë…„.*?\d{2}, ', '', name)
                                    all_events.append({
                                        'type': 'enter',
                                        'datetime': dt,
                                        'name': name
                                    })
                                    print(f"  [ì…ì¥] {dt} - {name}")

                            elif 'ë‹˜ì´ ë‚˜ê°”ìŠµë‹ˆë‹¤' in line:
                                name_match = re.search(r'(.+?)ë‹˜ì´ ë‚˜ê°”ìŠµë‹ˆë‹¤', line)
                                if name_match:
                                    name = name_match.group(1).strip()
                                    # ë‚ ì§œ ë¶€ë¶„ ì œê±°
                                    name = re.sub(r'^\d{4}ë…„.*?\d{2}, ', '', name)
                                    all_events.append({
                                        'type': 'leave',
                                        'datetime': dt,
                                        'name': name
                                    })
                                    print(f"  [í‡´ì¥] {dt} - {name}")
                        except Exception as e:
                            if i < 20:
                                print(f"  [ì‹œìŠ¤í…œ ë©”ì‹œì§€ íŒŒì‹± ì˜¤ë¥˜] {line[:50]}...")

        print(f"\nâœ“ ì´ {len(all_events)}ê°œì˜ ì´ë²¤íŠ¸ë¥¼ íŒŒì‹±í–ˆìŠµë‹ˆë‹¤.")
        print(f"  - ë©”ì‹œì§€: {sum(1 for e in all_events if e['type'] == 'message')}ê°œ")
        print(f"  - ì…ì¥: {sum(1 for e in all_events if e['type'] == 'enter')}ê°œ")
        print(f"  - í‡´ì¥: {sum(1 for e in all_events if e['type'] == 'leave')}ê°œ")

        # ë‘ ë²ˆì§¸ ë‹¨ê³„: ì‚¬ìš©ìë³„ ì…í‡´ì¥ ê¸°ê°„ ê³„ì‚°
        for event in sorted(all_events, key=lambda x: x['datetime']):
            if event['type'] == 'enter':
                user_status[event['name']].append({'enter': event['datetime'], 'leave': None})
            elif event['type'] == 'leave':
                # ë§ˆì§€ë§‰ ì…ì¥ ê¸°ë¡ì— í‡´ì¥ ì‹œê°„ ì¶”ê°€
                if event['name'] in user_status and user_status[event['name']]:
                    for period in reversed(user_status[event['name']]):
                        if period['leave'] is None:
                            period['leave'] = event['datetime']
                            break

        # ì•„ì§ ë‚˜ê°€ì§€ ì•Šì€ ì‚¬ìš©ìë“¤ì˜ leaveë¥¼ Noneìœ¼ë¡œ ìœ ì§€
        print("\nğŸ“Š ì‚¬ìš©ìë³„ ì…í‡´ì¥ ê¸°ë¡:")
        for name, periods in user_status.items():
            print(f"  - {name}:")
            for i, period in enumerate(periods):
                enter_str = period['enter'].strftime('%Y-%m-%d %H:%M')
                leave_str = period['leave'].strftime('%Y-%m-%d %H:%M') if period['leave'] else 'í˜„ì¬ê¹Œì§€'
                print(f"    {i+1}. {enter_str} ~ {leave_str}")

        # ì„¸ ë²ˆì§¸ ë‹¨ê³„: ìœ íš¨í•œ ë©”ì‹œì§€ë§Œ í•„í„°ë§
        chat_data = []
        total_messages = 0
        excluded_messages = 0
        date_excluded = 0

        for event in all_events:
            if event['type'] == 'message':
                total_messages += 1

                # ë‚ ì§œ ë²”ìœ„ ì²´í¬
                if self.start_date and event['datetime'] < self.start_date:
                    date_excluded += 1
                    continue
                if self.end_date and event['datetime'] > self.end_date:
                    date_excluded += 1
                    continue

                # í•´ë‹¹ ì‚¬ìš©ìê°€ ë©”ì‹œì§€ë¥¼ ë³´ë‚¸ ì‹œì ì— ì±„íŒ…ë°©ì— ìˆì—ˆëŠ”ì§€ í™•ì¸
                is_valid = False

                # ì…í‡´ì¥ ê¸°ë¡ì´ ì—†ëŠ” ì‚¬ìš©ìëŠ” ì²˜ìŒë¶€í„° ìˆì—ˆë‹¤ê³  ê°€ì •
                if event['name'] not in user_status:
                    is_valid = True
                else:
                    # ì…í‡´ì¥ ê¸°ë¡ì´ ìˆëŠ” ê²½ìš°, ìœ íš¨í•œ ê¸°ê°„ ë‚´ì˜ ë©”ì‹œì§€ì¸ì§€ í™•ì¸
                    for period in user_status[event['name']]:
                        enter_time = period['enter']
                        leave_time = period['leave']

                        # ì…ì¥ ì‹œê°„ ì´í›„ì´ê³ , í‡´ì¥ ì‹œê°„ ì´ì „(ë˜ëŠ” ì•„ì§ ì•ˆ ë‚˜ê°)ì¸ ê²½ìš°
                        if event['datetime'] >= enter_time:
                            if leave_time is None or event['datetime'] <= leave_time:
                                is_valid = True
                                break

                if is_valid:
                    chat_data.append({
                        'datetime': event['datetime'],
                        'date': event['datetime'].strftime('%Y-%m-%d'),
                        'time': event['datetime'].strftime('%H:%M:%S'),
                        'year': event['datetime'].year,
                        'month': event['datetime'].month,
                        'name': event['name'],
                        'message': event['message'],
                        'message_length': len(event['message'])
                    })
                else:
                    excluded_messages += 1

        print(f"\nâœ“ ì „ì²´ ë©”ì‹œì§€ ì¤‘ {total_messages}ê°œë¥¼ ë°œê²¬í–ˆìŠµë‹ˆë‹¤.")
        print(f"âœ“ ë‚ ì§œ ë²”ìœ„ë¥¼ ë²—ì–´ë‚œ ë©”ì‹œì§€ {date_excluded}ê°œë¥¼ ì œì™¸í–ˆìŠµë‹ˆë‹¤.")
        print(f"âœ“ ì…í‡´ì¥ ì‹œì ì„ ê³ ë ¤í•˜ì—¬ {excluded_messages}ê°œë¥¼ ì œì™¸í–ˆìŠµë‹ˆë‹¤.")

        date_range_str = self.get_date_range_string()
        print(f"âœ“ {date_range_str} ìœ íš¨í•œ ë©”ì‹œì§€: {len(chat_data)}ê°œ")

        if len(chat_data) == 0:
            print(f"âŒ {date_range_str} ìœ íš¨í•œ ë©”ì‹œì§€ê°€ ì—†ìŠµë‹ˆë‹¤.")
            return pd.DataFrame()

        df = pd.DataFrame(chat_data)
        return df

    def get_date_range_string(self):
        """ë‚ ì§œ ë²”ìœ„ë¥¼ ë¬¸ìì—´ë¡œ ë°˜í™˜"""
        if self.start_date and self.end_date:
            start_str = self.start_date.strftime('%Yë…„ %mì›”')
            end_str = self.end_date.strftime('%Yë…„ %mì›”')
            if start_str == end_str:
                return start_str
            else:
                return f"{start_str} ~ {end_str}"
        elif self.start_date:
            return f"{self.start_date.strftime('%Yë…„ %mì›”')} ì´í›„"
        elif self.end_date:
            return f"{self.end_date.strftime('%Yë…„ %mì›”')} ì´ì „"
        else:
            return "ì „ì²´ ê¸°ê°„"

def get_date_input():
    """ì‚¬ìš©ìë¡œë¶€í„° ë‚ ì§œ ë²”ìœ„ ì…ë ¥ë°›ê¸°"""
    print("\në‚ ì§œ ë²”ìœ„ë¥¼ ì„¤ì •í•©ë‹ˆë‹¤.")
    print("í˜•ì‹: YYYY-MM (ì˜ˆ: 2025-01)")
    print("Enterë¥¼ ëˆ„ë¥´ë©´ í•´ë‹¹ í•­ëª©ì„ ê±´ë„ˆëœë‹ˆë‹¤.\n")

    try:
        # ì‹œì‘ ë‚ ì§œ
        start_input = input("ì‹œì‘ ë…„-ì›”ì„ ì…ë ¥í•˜ì„¸ìš” (ì˜ˆ: 2024-12): ").strip()
        if start_input:
            year, month = map(int, start_input.split('-'))
            start_date = datetime(year, month, 1)
