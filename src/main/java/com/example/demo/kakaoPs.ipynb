                end_date = datetime(year, month + 1, 1) - pd.Timedelta(seconds=1)
        else:
            end_date = None

        # ê¸°ë³¸ê°’ ì„¤ì •
        if not start_date and not end_date:
            # í˜„ì¬ ë‚ ì§œ ê¸°ì¤€ìœ¼ë¡œ ì„¤ì •
            now = datetime.now()
            start_date = datetime(now.year, now.month, 1)
